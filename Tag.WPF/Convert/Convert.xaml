<UserControl x:Class="Tag.WPF.Convert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tag.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding FileName}"
                                    Header="파일 이름"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="0,-130,0,0" Height="180" VerticalAlignment="Top">
                <Border Margin="5">
                    <TreeView
                    ItemsSource="{Binding ConvertExtension}"
                    RenderTransformOrigin="0.5,0.5"

                    >

                        <TreeView.Resources>
                            <HierarchicalDataTemplate
                        DataType="{x:Type local:ConvertModel}"
                        ItemsSource="{Binding Preset}">
                                <TextBlock
                                   Text="{Binding Title}" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="180"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </HierarchicalDataTemplate>
                            <DataTemplate
                        DataType="{x:Type local:PresetModel}"
                        >
                                <TextBlock
                                       Text="{Binding Title}" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="180"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </TextBlock.RenderTransform>
                                </TextBlock>

                            </DataTemplate>
                        </TreeView.Resources>
                        <TreeView.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TreeView.RenderTransform>
                    </TreeView>
                </Border>
            </Border>
            <Grid Grid.Column="1">
                <ProgressBar
                    Height="Auto"
                    Margin="10,10,320,10"/>
                <TextBlock
                    HorizontalAlignment="Right"
                    Margin="0,18,264,16"
                    TextWrapping="Wrap"
                    Text="100 %" Width="51"
                    VerticalAlignment="Center"
                    TextAlignment="Center"/>
                <Button
                    Margin="0,10,10,10"
                    Height="Auto"
                    HorizontalAlignment="Right"
                    Content="변환 시작"
                    Width="94"/>
                <Button
                    Margin="0,10,109,10"
                    Height="Auto"
                    Content="변환할 파일 열기"
                    HorizontalAlignment="Right"
                    Width="150"/>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
