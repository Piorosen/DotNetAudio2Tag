<UserControl x:Class="Tag.WPF.Convert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tag.WPF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid AllowDrop="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <ListView Margin="5" DragEnter="ItemDragEnter" Drop="ItemDragDrop"
                  AllowDrop="True"
                  ItemsSource="{Binding ConvInfos}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding FileNamePlus}"
                                    Header="파일 이름"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="5 0 0 5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                               Text="변환할 확장자"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center"
                               />
                    <RadioButton Grid.Row="1" Grid.Column="0"
                                Style="{StaticResource MaterialDesignRadioButton}"
                                Content="MP3 320Kb"
                                 Tag="0"
                                IsChecked="True"
                                 Checked="RadioButton_Checked"
                                VerticalAlignment="Center"
                                
                            />
                    <RadioButton Grid.Row="1" Grid.Column="1"
                                 Style="{StaticResource MaterialDesignRadioButton}"
                                Content="MP3 256Kb"
                                 Checked="RadioButton_Checked"
                                VerticalAlignment="Center"
                                 Tag="1"
                            />
                    <RadioButton Grid.Row="1" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignRadioButton}"
                                Content="MP3 128Kb"
                                 Checked="RadioButton_Checked"
                                VerticalAlignment="Center"
                                 Tag="2"
                            />
                    <RadioButton Grid.Row="2" Grid.Column="0"
                                Style="{StaticResource MaterialDesignRadioButton}"
                                Content="Flac"
                                 Checked="RadioButton_Checked"
                                VerticalAlignment="Center"
                                Tag="3"
                            />
                    <RadioButton Grid.Row="2" Grid.Column="1"
                                Style="{StaticResource MaterialDesignRadioButton}"
                                Content="Mp3(User)"
                                 Checked="RadioButton_Checked"
                                VerticalAlignment="Center"
                                Tag="4"
                            />
                </Grid>
            </Border>
            <Grid Grid.Column="1" >
                <TextBlock
                    TextWrapping="Wrap"
                    Text="100 %"
                    TextAlignment="Center"
                    Margin="0,48,263,36"
                    Width="50" HorizontalAlignment="Right" d:LayoutOverrides="Width"
                    />
                <ProgressBar
                    Height="Auto"
                    Margin="10,48,318,37"/>
                <Button
                    Margin="0,40,109,20"
                    Height="Auto"
                    Content="변환할 파일 열기"
                    HorizontalAlignment="Right"
                    Width="150" Click="OpenDialog"/>
                <Button
                    Margin="0,40,10,20"
                    HorizontalAlignment="Right"
                    Content="변환 시작"
                    Height="Auto"
                    Width="94" Click="Execute"/>
    
            </Grid>
        </Grid>
    </Grid>
</UserControl>
