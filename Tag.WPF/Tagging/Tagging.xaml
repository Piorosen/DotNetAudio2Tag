                </Grid>
            </Grid>
            <Grid Width="180" HorizontalAlignment="Left" Margin="10,400,0,0" VerticalAlignment="Top" Height="60">
                <Label x:Name="LabelAlbumArtist" Content="{Binding AlbumArtist}" Margin="6,5,10,29"/>
