<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tag.WPF"
     xmlns:system="clr-namespace:System;assembly=mscorlib"         
    xmlns:Setting="clr-namespace:Tag.Setting.Setting;assembly=Tag.Setting" 
    x:Class="Tag.WPF.Tagging"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" Height="724" Width="899">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DialogHost.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <materialDesign:DialogHost  Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <materialDesign:DialogHost.DialogContent>
                <local:Status/>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        <Grid Grid.Column="0" Grid.RowSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid VerticalAlignment="Top">
                <Grid Height="60" Margin="10,10,10,0" VerticalAlignment="Top">
                    <Label x:Name="LabelTitle" Content="{Binding Title}" Margin="6,5,10,29"/>
                    <TextBox x:Name="TextTitle" materialDesign:HintAssist.Hint="(origin)" HorizontalAlignment="Stretch" Height="28" Margin="10,30,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>
                <Grid Height="60" Margin="10,75,0,0" VerticalAlignment="Top">
                    <Label x:Name="LabelArtist" Content="{Binding Artist}" Margin="6,5,10,29"/>
                    <TextBox x:Name="TextArtist" materialDesign:HintAssist.Hint="(origin)" HorizontalAlignment="Stretch" Height="28" Margin="10,30,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>
                <Grid Height="60" Margin="10,140,0,0" VerticalAlignment="Top">
                    <Label x:Name="LabelAlbum" Content="{Binding Album}" Margin="6,5,10,29"/>
                    <TextBox x:Name="TextAlbum" materialDesign:HintAssist.Hint="(origin)" HorizontalAlignment="Stretch" Height="28" Margin="10,30,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>
                <Grid Height="60" Margin="10,205,0,0" VerticalAlignment="Top">
                    <Label x:Name="LabelComment" Content="{Binding Comment}" Margin="6,5,10,29"/>
                    <TextBox x:Name="TextComment" materialDesign:HintAssist.Hint="(origin)" HorizontalAlignment="Stretch" Height="28" Margin="10,30,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>
                <Grid Margin="10,270,0,0" VerticalAlignment="Top" Height="60">
                    <Label x:Name="LabelGenre" Content="{Binding Genre}" Margin="6,5,8,29"/>
                    <TextBox x:Name="TextGenre" materialDesign:HintAssist.Hint="(origin)" HorizontalAlignment="Stretch" Height="28" Margin="10,30,8,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>

                <Grid Margin="10,335,0,0" VerticalAlignment="Top" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Label x:Name="LabelYear" Content="{Binding Year}" Margin="6,5,0,29" HorizontalAlignment="Left" Width="84"/>
                        <TextBox x:Name="TextYear" materialDesign:HintAssist.Hint="(origin)" Height="24" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,6,6"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Label x:Name="LabelTrack" Content="{Binding Track}" Margin="2,5,0,29" Width="88" HorizontalAlignment="Left"/>
                        <TextBox x:Name="TextTrack" materialDesign:HintAssist.Hint="(origin)" Height="24" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="6,0,10,6"/>
                    </Grid>
                </Grid>

                <Grid Margin="10,400,0,0" VerticalAlignment="Top" Height="60">
                    <Label x:Name="LabelAlbumArtist" Content="{Binding AlbumArtist}" Margin="6,5,10,29"/>
                    <TextBox x:Name="TextAlbumArtist" materialDesign:HintAssist.Hint="(origin)" HorizontalAlignment="Stretch" Height="28" Margin="10,30,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Grid>

                <Grid Margin="10,465,0,0" VerticalAlignment="Top" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Label x:Name="LabelComposer" Content="{Binding Composer}" Margin="6,5,0,29" HorizontalAlignment="Left" Width="84"/>
                        <TextBox x:Name="TextComposer" materialDesign:HintAssist.Hint="(origin)" Height="24" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,6,6"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Label x:Name="LabelDiscNum" Content="{Binding DiscNum}" Margin="2,5,0,29" Width="88" HorizontalAlignment="Left"/>
                        <TextBox x:Name="TextDiscNum" materialDesign:HintAssist.Hint="(origin)" Height="24" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="6,0,10,6" d:IsLocked="True"/>
                    </Grid>
                </Grid>

                <Grid Margin="10,530,0,0" VerticalAlignment="Top" Height="166">
                    <Label x:Name="LabelAlbumArt" Content="{Binding AlbumArt}" Margin="6,5,10,0" Height="23" VerticalAlignment="Top"/>
                    <Grid Margin="6,33,10,-33">
                        <Border BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,0,124,-6" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Image x:Name="image" Height="150" Width="150"/>
                        </Border>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
        <ListView Grid.Column="1" Grid.Row="0"
            ItemsSource="{Binding Items}"
            ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding FileName}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Title}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Directory}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding TagType}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Artist}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding AlbumArtist}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Album}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Track}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding DiscNum}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Year}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Genre}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Comment}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Codec}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Bitrate}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Length}" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding N}"
                        Header="{Binding Fixed}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Column="1" Grid.Row="1">
            <Button
                Width="150" HorizontalAlignment="Right" Margin="0,9,10,9" Click="Button_Click_1"
                >
                일괄 저장
            </Button>
            <Button
                ToolTip="Resource name: MaterialDesignRaisedAccentButton" Margin="236,0,182,10" VerticalAlignment="Bottom"
                >
                태그 정보 가져오기
            </Button>
            </Grid>

        <!--
