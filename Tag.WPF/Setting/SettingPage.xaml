
<UserControl x:Class="Tag.WPF.SettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:Tag.WPF"
             xmlns:Setting="clr-namespace:Tag.Setting;assembly=Tag.Setting"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             Width="800" Height="450"
             AllowDrop="True" MouseEnter="Update"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="프로그램 표기 언어"
                       TextAlignment="Left"
                       Grid.Row="0"
                       VerticalAlignment="Center"
                       />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <RadioButton Content="English"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Grid.Column="0" Checked="RadioButton_Checked"
                             Tag="en-us.lang"
                             >
                </RadioButton>
                <RadioButton Content="한국어"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Grid.Column="1" Checked="RadioButton_Checked"
                             Tag="ko-kr.lang"
                             >
                </RadioButton>
                <RadioButton Content="日本語"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Grid.Column="2" Checked="RadioButton_Checked"
                             Tag="ja-jp.lang"
                             >
                </RadioButton>
                <RadioButton Content="Others"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Grid.Column="3" Checked="RadioButton_Checked"
                             Tag="other.lang"
                             >
                </RadioButton>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="10">
            <TextBlock Text="{Binding Capacity, StringFormat={}캐시 파일 용량 : {0}}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       />
            <Button HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Height="30"
                    Content="캐시 삭제" Click="Button_Click"
                    />
        </Grid>
    </Grid>
</UserControl>